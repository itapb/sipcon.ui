@if (IsMudDialog)
{
    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Row="true">
        <MudPaper Class="pa-4" Elevation="1">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        </MudPaper>
    </MudStack>
}
else
{
    <MudOverlay Visible="true" DarkBackground="true" Absolute="true" ZIndex="9999" Style="height: 100vh; width: 100vw;">
        <MudPaper Class="pa-4" Elevation="1">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        </MudPaper>
    </MudOverlay>
}


@code{
    [Parameter] public bool IsMudDialog { get; set; }
}