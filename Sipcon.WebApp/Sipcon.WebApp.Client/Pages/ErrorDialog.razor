<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Start">
            <MudIcon Icon="@strIcon" Color="@Color" Style="font-size: 2rem;" />
            <MudText Typo="Typo.h6">
                @TitleText
            </MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Variant="Variant.Filled" Color="@Color" Size="Size.Medium">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string TitleText { get; set; } = "Error"; // Título por defecto
    [Parameter] public string? ContentText { get; set; } // Mensaje de error a mostrar
    [Parameter] public string? ButtonText { get; set; } = "OK";
    [Parameter] public Color Color { get; set; } = Color.Error;
    [Parameter] public string? strIcon { get; set; } = Icons.Material.Filled.Error;
  
    private void Submit() => MudDialog.Close(DialogResult.Ok(true)); // Cierra el diálogo
}
