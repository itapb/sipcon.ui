<div id="scrollableGridContentStyled" style="overflow-y: auto;  padding: 8px; background-color: #f0f0f0;">
    <MudGrid Spacing="2">
        <MudItem xs="12" sm="9">
            <MudStack Style="height: 100%; flex: 1 1 auto;">
                <MudPaper Elevation="2" Class="pa-2 mud-text-align-center">
                    <MudStack Row="true" Spacing="2">
                        <MudFab StartIcon="@Icons.Material.Filled.Update" Color="Color.Info" Size="Size.Small" Label="Guardar"></MudFab>
                        <MudButton>Cerrar</MudButton>
                    </MudStack>
                </MudPaper>
                <MudPaper Elevation="2">
                    <MudDataGrid @ref="ReceptionMasterDetailMudDataGrid" T="ReceptionItem" Items="@receptionItems" Filterable="false" FixedHeader Height="calc(100vh - 240px)">
                        <ToolBarContent>
                            <MudIconButton Icon="@Icons.Material.Filled.PlaylistAdd" Size="Size.Large" Color="Color.Info"></MudIconButton>
                            <MudIconButton Icon="@Icons.Material.Filled.PlaylistRemove" Size="Size.Large" Color="Color.Info"></MudIconButton>
                        </ToolBarContent>
                        <Columns>
                            <TemplateColumn>
                                <HeaderTemplate>
                                    <MudCheckBox @bind-Value="IsAllCheckBoxSelected" @bind-Value:after="AfterAsyncAllCheck" />
                                </HeaderTemplate>
                                <CellTemplate>
                                    <MudCheckBox @bind-Value="IsSelected" />
                                </CellTemplate>
                            </TemplateColumn>
                            <PropertyColumn Property="x => x.PartCode" Title="Cod Respuesto" />
                            <PropertyColumn Property="x => x.PartDescription" Title="Cod Respuesto" />
                            <PropertyColumn Property="x => x.Location" Title="Ubicacion" />
                            <PropertyColumn Property="x => x.qtheoretical" Title="Teorica" />
                            <PropertyColumn Property="x => x.qReal" Title="Real" />
                            <PropertyColumn Property="x => x.vType" Title="Tipo" />
                            <PropertyColumn Property="x => x.Status" Title="Status" />
                        </Columns>
                    </MudDataGrid>
                </MudPaper>
            </MudStack>
        </MudItem>
        <MudItem xs="12" sm="3">
            <MudStack Style="height: 100%; flex: 1 1 auto;">
                <MudPaper Elevation="2" Class="pa-2 mud-text-align-center flex-grow-1">
                    <MudGrid Spacing="2">
                        <MudItem xs="12"><MudText Typo="Typo.h6" Color="Color.Info">Datos Generales:</MudText></MudItem>
                        <MudItem xs="12"><MudTextField ReadOnly="true" @bind-Value="TextValue" Adornment="Adornment.Start" AdornmentText="Nro Doc :" Variant="Variant.Text" Class="align-right-input" /></MudItem>
                        <MudItem xs="12"><MudTextField ReadOnly="true" @bind-Value="TextValue2" Adornment="Adornment.Start" AdornmentText="Fecha :" Variant="Variant.Text" Class="align-right-input" /></MudItem>
                        <MudItem xs="12"><MudTextField ReadOnly="true" @bind-Value="TextValue3" Adornment="Adornment.Start" AdornmentText="Usuario :" Variant="Variant.Text" Margin="Margin.Dense" Class="align-right-input" /></MudItem>
                        <MudItem xs="12"><MudTextField ReadOnly="true" @bind-Value="TextValue4" Adornment="Adornment.Start" AdornmentText="Estatus :" Variant="Variant.Text" Margin="Margin.Dense" Class="align-right-input" /></MudItem>
                        <MudItem xs="12"><MudTextField @bind-Value="TextValue5" Label="Referencia" Variant="Variant.Text" Margin="Margin.Dense" /></MudItem>
                        <MudItem xs="12"><MudTextField @bind-Value="TextValue5" Label="Observacion" Variant="Variant.Text" Margin="Margin.Dense" /></MudItem>
                    </MudGrid>
                </MudPaper>
                <MudPaper Elevation="2" Class="pa-2 mud-text-align-center flex-grow-1">
                    <MudGrid Spacing="2">
                        <MudItem xs="12"><MudText Typo="Typo.h6" Color="Color.Info">Totales:</MudText></MudItem>
                        <MudItem xs="12"><MudTextField ReadOnly="true" Adornment="Adornment.Start" Margin="Margin.Dense" @bind-Value="intValue" AdornmentText="Unidad :" Variant="Variant.Text" Class="align-right-input" /></MudItem>
                        <MudItem xs="12"><MudTextField ReadOnly="true" Adornment="Adornment.Start" Margin="Margin.Dense" @bind-Value="intValue2" AdornmentText="Productos :" Variant="Variant.Text" Class="align-right-input" /></MudItem>
                        <MudItem xs="12"><MudTextField ReadOnly="true" Adornment="Adornment.Start" Margin="Margin.Dense" @bind-Value="intValue3" AdornmentText="Costo :" Variant="Variant.Text" Class="align-right-input" /></MudItem>
                    </MudGrid>
                </MudPaper>
                <MudPaper Elevation="2" Class="pa-2 mud-text-align-center">
                    <MudStack Row="true" Spacing="2" Justify="Justify.FlexEnd" StretchItems="StretchItems.Start">
                        <MudFab StartIcon="@Icons.Material.Filled.CheckCircleOutline" Color="Color.Info" Size="Size.Small" Label="Generar">

                        </MudFab>
                    </MudStack>
                </MudPaper>
            </MudStack>
        </MudItem>
    </MudGrid>
</div>
<style>
    .align-right-input input {
        text-align: right;
    }
</style>
