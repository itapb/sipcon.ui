@* @page "/mobile-guidedetail" *@
@using Sipcon.WebApp.Client.Layout
@layout MobileLayout

<div style="flex-shrink: 0;" class="pa-3 jpv1-dialog-body-background">
    <MudPaper Elevation="2" Class="pa-3">
        <MudGrid Spacing="2">
            <MudItem xs="12">
                <MudStack Row="false" Class="pa-2 mud-theme-info mud-typography-h6" Spacing="1" style="line-height:1.1;">
                    <div>CLIENTE : @currentDispatch?.CustomerName</div>
                    <MudStack Row="true" StretchItems="StretchItems.Start" Justify="Justify.FlexEnd">
                        <div>GUIA: @currentDispatch?.GuideId</div>
                        <div>BULTOS</div>
                    </MudStack>
                </MudStack>
            </MudItem>
            <MudItem xs="12">
                <MudText>
                    <MudDataGrid @ref="PackagesMudDataGrid" T="Models.Package" ServerData="ServerReload" Striped="true" Hover="true" Filterable="false" Loading="_loading" FixedHeader SelectedItemChanged="ClickSelectPackage" @bind-CurrentPage="GuideCurrentPage" ShowColumnOptions="false" Class="hide-datagrid-headers">
                        <Columns>
                            <TemplateColumn CellClass="d-flex justify-center align-center">
                                <CellTemplate>
                                    <MudStack Row>
                                        <MudText Class="mr-2" >@context.Item.Code</MudText>
                                        <MudText Class="mr-2" >@context.Item.Weight Kg</MudText>
                                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Filled.AddBox" OnClick="() => ClickAddPackage(context.Item)" />
                                    </MudStack>
                                </CellTemplate>
                            </TemplateColumn>
                        </Columns>                        
                        <PagerContent>
                            <MudStack Row="false" Spacing="2">
                                <MudPaper Class="pa-3">
                                    <MudTextField T="string" Placeholder="Buscar" Adornment="Adornment.Start" ValueChanged="@(s => OnSearch(s))" Value="searchString" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" Style="height:40px;" />
                                </MudPaper>
                            </MudStack>
                        </PagerContent>
                    </MudDataGrid>
                </MudText>
            </MudItem>
            <MudItem xs="12">
                <MudStack Row="true" Justify="Justify.Center">
                    <MudStack Row="true" Spacing="5">                                              
                        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Refresh" Size="Size.Medium" OnClick="ClickRefreshDispatchPackages" />
                        <MudFab Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Close" OnClick="ClickCloseGuides" Size="Size.Medium" />
                    </MudStack>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudPaper>
</div>
<style>
    .hide-datagrid-headers .mud-table-head {
        display: none !important;
    }
</style>
@code {
    [Inject] private HttpClient Http { get; set; } = default!;
    [Inject] private IDialogService DialogService { get; set; } = default!;
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public Models.Dispatch? currentDispatch { get; set; } = default!;
    [Parameter] public Models.DispatchStep Value { get; set; }
    [Parameter] public EventCallback<Models.DispatchStep> ValueChanged { get; set; }
    private Models.DispatchStep CurrentStep
    {
        get => Value;
        set
        {
            if (Value != value)
            {
                Value = value;
                ValueChanged.InvokeAsync(Value);
            }
        }
    }
    bool _loading = true;
    string searchString = "";
    private int GuideCurrentPage = 0;


    private MudDataGrid<Models.Package>? PackagesMudDataGrid;


    Func<Models.Package, object> GetSortKeySelector(string sortByPropertyName) => sortByPropertyName switch
    {
        nameof(Models.Package.Code) => o => o.Code ?? "",
        nameof(Models.Package.Weight) => o => o.Weight ?? 0,
        _ => null!
    };

    private async Task<GridData<Models.Package>> ServerReload(GridState<Models.Package> state)
    {
        _loading = true;
        var totalItems = 0;
        var mOffset = state.Page * state.PageSize;
        IEnumerable<Models.Package> data;
        HttpResponseMessage response = await Http.GetAsync($"api/Packing/GetPackages?supplierId={currentDispatch?.SupplierId}&customerId={currentDispatch?.CustomerId}&userId={currentDispatch?.UserId}");
        if (response.IsSuccessStatusCode)
        {
            var content2 = await response.Content.ReadFromJsonAsync<WebApiResponse<List<Models.Package>>>();
            totalItems = content2!.total ?? 0;
            data = content2!.data?.Where(r => r.Closed == true) ?? new List<Models.Package>();
        }
        else
        {
            var errorMessage = await response.Content.ReadAsStringAsync();
            throw new Exception(errorMessage);
        }
        if (state.SortDefinitions.FirstOrDefault() is SortDefinition<Models.Package> sortDefinition)
        {
            data = data.OrderByDirection(sortDefinition.Descending ? SortDirection.Descending : SortDirection.Ascending, GetSortKeySelector(sortDefinition.SortBy));
        }
        _loading = false;
        return new GridData<Models.Package> { TotalItems = totalItems, Items = data };

    }

    private async Task ClickRefreshDispatchPackages(MouseEventArgs ev)
    {
        await PackagesMudDataGrid!.ReloadServerData();
    }
    private async Task OnSearch(string text)
    {
        if (text.Length == 0 || text.Length >= 3)
        {
            _loading = true;
            searchString = text;
            await AddScannedPackage(text);            
        }
    }
    private async Task ClickSelectPackage(Models.Package item)
    {
        currentDispatch!.PackageId = item.Id;
        currentDispatch!.Code = item.Code;        
        currentDispatch!.Number = item.Number;
        CurrentStep = Models.DispatchStep.Package;
        await Task.CompletedTask;
    }
    private void CloseDispatchPackages()
    {
        currentDispatch!.PackageId = 0;
        CurrentStep = Models.DispatchStep.GuideDetails;
    }
    private async Task ClickCloseGuides(MouseEventArgs args)
    {
        CloseDispatchPackages();
        await Task.CompletedTask;
    }
    private async Task AddScannedPackage(string? InputCode)
    {
        var result_NewPackage = await AddPackage(InputCode, currentDispatch?.GuideId, currentDispatch?.UserId);
        if (result_NewPackage!.IsSuccessStatusCode)
        {
            var result = await DialogService.ShowDialog(Useful.OkSavedMessage, "Bulto en Guia", "OK", Color.Info, Icons.Material.Filled.Commit);
            searchString = "";
            await PackagesMudDataGrid!.ReloadServerData();
        }else if (result_NewPackage.StatusCode == System.Net.HttpStatusCode.Conflict)
        {
            var conflictContent = await result_NewPackage.Content.ReadFromJsonAsync<WebApiResponse<Object?>>();           
            await DialogService.ShowDialog(conflictContent?.message!.Replace("USP_POST_GUIDE_ADDPACKGE : ",""), "Error", "OK", Color.Error, Icons.Material.Filled.Error);
        }

    }
    private async Task<HttpResponseMessage?> AddPackage(string? Code, int? GuideId, int? UserId) => await Http.PostAsync($"api/Packing/AddPackge?packageCode={Code}&guideId={GuideId}&userId={UserId}", null);

    private async Task ClickAddPackage(Models.Package item)
    {
        //var result_NewPackage = await Http.PostAsync($"api/Packing/AddPackge?packageCode={item.Code}&guideId={currentDispatch?.GuideId}&userId={currentDispatch?.UserId}", null);
        var result_NewPackage = await AddPackage(item.Code,currentDispatch?.GuideId,currentDispatch?.UserId);
        if (result_NewPackage!.IsSuccessStatusCode)
        {
            var result = await DialogService.ShowDialog(Useful.OkSavedMessage, "Bulto en Guia", "OK", Color.Info, Icons.Material.Filled.Commit);
            if (!result!.Canceled)
            {
                if (PackagesMudDataGrid?.FilteredItems.Count() == 1)
                    CloseDispatchPackages();
                else
                    await PackagesMudDataGrid!.ReloadServerData();
            }

        }
    }

}