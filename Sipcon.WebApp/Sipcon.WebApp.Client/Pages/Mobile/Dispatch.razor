@page "/mobile-dispatch"
@using Sipcon.WebApp.Client.Layout
@layout MobileLayout

@switch (CurrentStep)
{
    case Models.DispatchStep.Customer:
        <Customers @bind-Value="CurrentStep" currentDispatch="CurrentDispatch" />
        break;
    case Models.DispatchStep.Guides:
        <Guides @bind-Value="CurrentStep" currentDispatch="CurrentDispatch" />
        break;
    case Models.DispatchStep.GuideDetails:
        <GuideDetails @bind-Value="CurrentStep" currentDispatch="CurrentDispatch" />
        break;
    case Models.DispatchStep.Package:
        <Package @bind-Value="CurrentStep" currentDispatch="CurrentDispatch" />
        break;
    case Models.DispatchStep.Pending:
        <Pending @bind-Value="CurrentStep" currentDispatch="CurrentDispatch" />
        break;
    case Models.DispatchStep.SetPackage:
        <SetPackage @bind-Value="CurrentStep" currentDispatch="CurrentDispatch" />
        break;
}

@code {
    public  Models.Dispatch CurrentDispatch  = new() { UserId = 1, SupplierId = 4069, CustomerId = 0, GuideId = 0, PartId = 0, PackageId= 0 , CustomerName = ""};
    public Models.DispatchStep CurrentStep = Models.DispatchStep.Customer;
    public static Models.DispatchStep? PreviousStep;
}
